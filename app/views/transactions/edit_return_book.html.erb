<div class="row m-4">
  <%= form_with(model: @transaction, url: transaction_update_return_book_path(@transaction_return_book), method: :put) do |f| %>
    <div class="col-5 card">
      <div class="card-body">
        <div class="mb-3">
          <%= f.label :ISBN, class: "form-label" %>
          <%= f.text_field :ISBN, class: "form-control", placeholder: "Enter fee." ,:value => @transaction_return_book.book.ISBN %>
        </div>
        <%if  @transaction_return_book.late_fee >0%>
          <div class="mb-3">
            <%= f.label :late, class: "form-label" %>
            <%= f.number_field :late_fee, class: "form-control", placeholder: "Enter fee.", :value => @transaction_return_book.late_fee %>
          </div>
        <%end%>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
<div class="m-5 btn btn-primary">
  <%= link_to "Back", transactions_path(@transaction), :class => "btn" %>
</div>
