<div class="row m-4">
  <%= form_with(model: @patron) do |f| %>
    <div class="col-5 card">
      <div class="card-body">
        <div class="mb-3">
          <%= f.label :name, { class: "form-label" } %>
          <%= f.text_field :name, { class: "form-control", placeholder: "Site name" } %>
        </div>
        <div class="mb-3">
          <%= f.label :contact_information, { class: "form-label" } %>
          <%= f.number_field :contact_information, { class: "form-control", placeholder: "Site contact information" } %>
        </div>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
