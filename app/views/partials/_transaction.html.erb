<div class="row m-4">
  <%= form_with(model: @transaction, url: new_patron_transaction_path(@patron)) do |f| %>
    <div class="col-5 card">
      <div class="card-body">
        <div class="mb-3">
          <%= f.label :name, { class: "form-label" } %>
          <%= f.text_field :name, { class: "form-control", placeholder: "Site title" } %>
        </div>
        <div class="mb-3">
          <%= f.label :contact_information, { class: "form-label" } %>
          <%= f.text_field :contact_information, { class: "form-control", placeholder: "Site author" } %>
        </div>
        <div class="mb-3">
          <%= f.label :ISBN, class: "form-label" %>
          <%= f.text_field :ISBN, class: "form-control", placeholder: "ISBN No." %>
        </div>
        <div class="mb-3">
          <%= f.label :date, class: "form-label" %>
          <%= f.date_field :date, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :return_date, class: "form-label" %>
          <%= f.date_field :return_date, class: "form-control" %>
        </div>
        <%= f.submit "Assign", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
